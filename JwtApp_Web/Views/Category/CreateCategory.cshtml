@model CategoryCreateModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
  <form asp-action="CreateCategory" asp-controller="Category" method="post">
      <div class="mb-3">
          <label>Definition</label>
          <input asp-for="@Model.Definition" type="text" class="form-control">
      </div>
      <div class="mb-3">
          <button type="submit" class="btn btn-success btn-sm">Create Category</button>
      </div>
      <div asp-validation-summary="All" class="text-danger"></div>
  </form>
</div>
