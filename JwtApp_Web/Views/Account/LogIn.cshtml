@model UserLoginModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
  <form asp-action="LogIn" asp-controller="Account" method="post">
      <div class="mb-3">
          <label>Username</label>
          <input asp-for="@Model.Username" type="text" class="form-control">
      </div>
       <div class="mb-3">
          <label>Password</label>
          <input asp-for="@Model.Password" type="password" class="form-control">
      </div>
       <div class="mb-3">
          <input asp-for="@Model.RememberMe" type="checkbox" class="form-check-input">
          <label class="form-check-label">Remember Me</label>
      </div>
      <div class="mb-3">
          <button type="submit" class="btn btn-success btn-sm">Sıgn In</button>
      </div>
      <div asp-validation-summary="All" class="text-danger"></div>
  </form>
</div>
